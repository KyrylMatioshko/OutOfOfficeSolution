@model IEnumerable<UserRolesViewModel>
@{
    ViewBag.Title = "Керування ролями";
}

<h2>Працівники та їх ролі</h2>
<table class="table">
    <thead>
        <tr>
            <th>Повне ім'я</th>
            <th>Email</th>
            <th>Роль</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.FullName</td>
                <td>@user.Email</td>
                <td>@string.Join(", ", user.Roles)</td>
                <td>
                    <div class="form-group">
                        <select class="form-control role-select" data-user-id="@user.UserId">
                            <option value="">-- Виберіть нову роль --</option>
                            @foreach (var role in ViewBag.Roles)
                            {
                                <option value="@role.Name">@role.Name</option>
                            }
                        </select>
                    </div>
                </td>
                <td>
                    <button class="btn btn-primary change-role-btn" data-user-id="@user.UserId">Змінити роль</button>
                </td>
            </tr>
        }
    </tbody>
</table>

<script src="~/js/change-role.js" defer></script>