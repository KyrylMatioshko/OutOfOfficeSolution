@{
    ViewData["Title"] = "Approval Request";

    var role = User.IsInRole("Admin") ? "Admin" :
               User.IsInRole("HR") ? "HR" :
               User.IsInRole("PM") ? "PM" :
               User.IsInRole("Employee") ? "Employee" : "quest";
}

@model ApprovalRequestViewModel

<a asp-controller="ApprovalRequest" asp-action="Index">Повернутися до заявок</a>

@if (Model != null)
{
    <table class="table table-striped table-bordered">
        <thead class="thead-dark">
            <tr>
                <th>Відправник заявки</th>
                <th>HR</th>
                <th>Причина відпустки</th>
                <th>Дата початку відпустки</th>
                <th>Дата кінця відпустки</th>
                <th>Коментар</th>
                <th>Статус</th>
            </tr>
        </thead>
        <tbody>
                <tr>
                    <td>@Model.LeaveRequest.Employee.FullName</td>
                    <td>@Model.Approver?.FullName</td>
                    <td>@Model.LeaveRequest.AbsenceReason</td>
                    <td>@Model.LeaveRequest.StartDate</td>
                    <td>@Model.LeaveRequest.EndDate</td>
                    <td>@Model.Comment</td>
                    <td>@Model.Status</td>
                </tr>
        </tbody>
    </table>
}
else
{
    <h2>Поки що немає</h2>
}